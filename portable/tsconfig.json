{
  "include": ["./index.ts", "./types/**/*.d.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "../dist/build/js",
    "declaration": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
